{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      // base
      "@/*": ["./*"],
      "@_mocks/*": ["./_mocks/*"],
      "@styles/*": ["./app/styles/*"],
      "@provider/*": ["./app/components/provider/*"],
      // ui
      "@components/*": ["./app/components/*"],
      "@assets/*": ["./app/components/assets/*"],
      // libs, utils
      "@libs/*": ["./app/libs/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
